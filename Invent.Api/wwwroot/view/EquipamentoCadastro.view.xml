<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="ui5.gestaoequipamento.controller.EquipamentoCadastro"
>
    <Page
        title="{i18n>tituloPaginaCadastro}"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
    <content>
            <!-- Entrada para Nome -->
            <Label text="Nome do Equipamento" labelFor="inputNomeEquipamento"/>
            <Input id="inputNomeEquipamento" required="true" />

            <!-- Entrada para Tipo -->
            <Label text="Tipo do Equipamento" labelFor="inputTipoEquipamento"/>
            <Input id="inputTipoEquipamento" required="true" />

            <!-- Entrada para Tipo -->
            <Label text="Quantidade em Estoque" labelFor="inputQuantidadeEquipamento"/>
            <Input id="inputQuantidadeEquipamento" type="Number"/>
        </content>

        <Button 
            text="Cadastrar"
        ></Button>

        <Button 
            text="Cancelar" type="Default"
        ></Button>
    </Page>
</mvc:View>