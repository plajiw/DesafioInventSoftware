<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="ui5.gestaoequipamento.controller.EquipamentoCadastro"
>
    <Page
        title="{i18n>tituloPaginaCadastro}"
        showNavButton="true"
        navButtonPress=".aoClicarEmVoltar"
    >
        <headerContent>
            <Button
                type="Emphasized"
                text="{i18n>botaoSalvar}"
                icon="sap-icon://save"
                press=".onSalvar"
            />
            <Button
                type="Reject"
                text="{i18n>botaoCancelar}"
                icon="sap-icon://cancel"
                press=".aoClicarEmVoltar"
            />
        </headerContent>
        <content>
            <VBox class="sapUiSmallMargin">
                <Label
                    text="{i18n>labelNome}"
                    required="true"
                />
                <Input
                    id="inputNomeEquipamento"
                    placeholder="{i18n>placeholderNome}"
                />

                <Label
                    text="{i18n>labelTipo}"
                    required="true"
                    class="sapUiSmallMarginTop"
                />
                <Input
                    id="inputTipoEquipamento"
                    placeholder="{i18n>placeholderTipo}"
                />

                <Label
                    text="{i18n>labelQuantidade}"
                    class="sapUiSmallMarginTop"
                />
                <Input
                    id="inputQuantidadeEquipamento"
                    type="Number"
                    placeholder="{i18n>placeholderQuantidade}"
                />
            </VBox>
        </content>
    </Page>
</mvc:View>
