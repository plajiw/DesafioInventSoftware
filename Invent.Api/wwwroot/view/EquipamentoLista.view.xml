<mvc:View
  xmlns:tnt="sap.tnt"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  controllerName="ui5.gestaoequipamento.controller.EquipamentoLista"
>
  <!-- PÃ¡gina de Cadastro -->
  <Panel>
    <Button
      icon="sap-icon://add"
      text="{i18n>botaoCadastrar}"
      press=".paraCadastro"
      type="Emphasized"
    />
  </Panel>

  <Panel
    id="panelListaEquipamentos"
    headerText="{i18n>tituloPainelListagem}"
    class="sapUiSmallMarginTopBottom"
    expandable="false"
    expanded="true"
  >
    <!-- Barra de buscas -->
    <headerToolbar>
      <Toolbar>
        <Title
          text="{i18n>tituloPainelListagem}"
          level="H2"
        />
        <SearchField
          id="searchEquipamentos"
          width="250px"
          placeholder="{i18n>buscarPlaceholder}"
          search=".onSearch"
        />
      </Toolbar>
    </headerToolbar>

    <!-- Tabela de Equipamentos -->
    <Table
      id="tabelaEquipamentos"
      items="{equipamentos>/}"
      inset="false"
      growing="true"
      growingThreshold="20"
      class="sapUiResponsiveMargin"
    >
      <columns>
        <Column>
          <Text text="{i18n>idTabela}" />
        </Column>
        <Column>
          <Text text="{i18n>nomeTabela}" />
        </Column>
        <Column>
          <Text text="{i18n>tipoTabela}" />
        </Column>
        <Column>
          <Text text="{i18n>quantidadeTabela}" />
        </Column>
        <Column>
          <Text text="{i18n>dataTabela}" />
        </Column>
        <Column>
          <Text text="{i18n>disponibilidadeTabela}" />
        </Column>
      </columns>

      <items>
        <ColumnListItem>
          <cells>
            <!-- ID -->
            <Text text="{equipamentos>id}" />

            <!-- Nome -->
            <Text text="{equipamentos>nome}" />

            <!-- Tipo -->
            <Text text="{equipamentos>tipo}" />

            <!-- Quantidade -->
            <ObjectNumber
              number="{equipamentos>quantidadeEmEstoque}"
              unit="un"
            />

            <!-- Data -->
            <Text
              text="{ path: 'equipamentos>dataDeInclusao', formatter: '.formatter.formatarData'}"
            />

            <!-- Disponibilidade -->
            <Text
              text="{ path: 'equipamentos>temEstoque', formatter: '.formatter.formatarDisponibilidade' }"
            />
          </cells>
        </ColumnListItem>
      </items>
    </Table>
  </Panel>
</mvc:View>
